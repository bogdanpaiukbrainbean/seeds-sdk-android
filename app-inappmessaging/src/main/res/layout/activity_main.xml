<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:nestedScrollingEnabled="false">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Do a social good purchase"
        android:id="@+id/iamButton1"
        android:onClick="startSocialGoodPurchase"
        android:layout_centerInParent="true"
        android:layout_marginTop="10dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Do a normal in-app purchase"
        android:id="@+id/iamButton2"
        android:onClick="startNormalPurchase"
        android:layout_below="@id/iamButton1"
        android:layout_centerInParent="true"
        android:layout_marginTop="10dp" />


</RelativeLayout>
